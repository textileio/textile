{
  "name": "@textile/textile",
  "version": "0.0.0",
  "description": "JS lib for interacting with Textile APIs.",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "compile": "lerna run compile",
    "build": "lerna run build",
    "build:node": "lerna run build:node --stream",
    "build:browser": "lerna run build:browser --stream",
    "lint": "eslint --fix --ext .js,.ts packages/*/src/**/*",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "TS_NODE_FILES=true mocha --exit",
    "test:browser": "lerna run --stream test:browser",
    "docs": "typedoc && touch ./docs/.nojekyll"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "json"
    ],
    "all": true
  },
  "engines": {
    "node": ">= 10.0.0",
    "npm": ">= 3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/textileio/js-textile.git"
  },
  "bugs": {
    "url": "https://github.com/textileio/js-textile/issues"
  },
  "keywords": [
    "textile",
    "hub",
    "IPFS",
    "p2p"
  ],
  "author": "Textile",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@textile/threads-core": "^0.1.9",
    "@types/browser-or-node": "^1.2.0",
    "@types/chai": "^4.2.5",
    "@types/mocha": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "browser-or-node": "^1.2.1",
    "chai": "^4.2.0",
    "eslint": "^6.7.1",
    "lerna": "^3.19.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-strict": "^14.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "isomorphic-ws": "^4.0.1",
    "mocha": "^6.2.2",
    "nyc": "^15.0.0",
    "polendina": "^1.0.0",
    "prettier": "^2.0.4",
    "prettier-eslint": "^9.0.0",
    "source-map-support": "^0.5.16",
    "ts-loader": "^7.0.2",
    "ts-mocha": "^7.0.0",
    "ts-node": "^8.2.0",
    "tsconfig-paths": "^3.8.0",
    "typedoc": "0.15.3",
    "typedoc-plugin-external-module-name": "^3.0.0",
    "typedoc-plugin-lerna-packages": "^0.2.2",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "ws": "^7.3.0"
  }
}
