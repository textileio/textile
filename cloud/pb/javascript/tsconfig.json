{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": [
    "src"
  ],
  "exclude": [
    "scripts",
    "node_modules",
    "examples",
    "docs",
    "dist"
  ],
  "compileOnSave": true
}
